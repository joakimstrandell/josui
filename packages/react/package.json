    "react-dom": "^18.3.0",
    "tailwindcss": "^4.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.7.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
