{
  "name": "@josui/vue",
  "version": "0.2.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles.css": "./dist/styles.css",
    "./src": "./src/index.ts"
  },
  "files": [
    "dist",
    "skills",
    "src"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@josui/scss": "workspace:*",
    "@josui/tokens": "workspace:*",
    "reka-ui": "^2.7.0"
  },
  "devDependencies": {
    "@josui/typescript-config": "workspace:*",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/vue": "^8.1.0",
    "@vitejs/plugin-vue": "^5.2.0",
    "jsdom": "^26.0.0",
    "sass": "^1.77.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.4.0",
    "vitest": "^3.0.0",
    "vue": "^3.5.0",
    "vue-tsc": "^2.2.0"
  },
  "peerDependencies": {
    "lucide-vue-next": ">=0.300.0",
    "vue": "^3.4.0"
  },
  "peerDependenciesMeta": {
    "lucide-vue-next": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
