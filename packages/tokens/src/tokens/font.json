{
  "font": {
    "family": {
      "$type": "fontFamily",
      "sans": {
        "$value": ["Roboto", "ui-sans-serif", "system-ui", "sans-serif"],
        "$description": "Primary sans-serif font stack"
      },
      "serif": {
        "$value": ["Roboto Slab", "Georgia", "Cambria", "Times New Roman", "Times", "serif"],
        "$description": "Serif font stack"
      },
      "mono": {
        "$value": ["Roboto Mono", "ui-monospace", "SFMono-Regular", "monospace"],
        "$description": "Monospace font stack"
      },
      "heading": {
        "$value": ["Roboto Mono", "ui-monospace", "SFMono-Regular", "monospace"],
        "$description": "Font family for headings"
      },
      "body": {
        "$value": ["Roboto", "ui-sans-serif", "system-ui", "sans-serif"],
        "$description": "Font family for body text"
      }
    },
    "size": {
      "$type": "dimension",
      "xs": {
        "$value": { "value": 0.75, "unit": "rem" },
        "$description": "Extra small text (12px)"
      },
      "sm": {
        "$value": { "value": 0.875, "unit": "rem" },
        "$description": "Small text (14px)"
      },
      "default": {
        "$value": { "value": 1, "unit": "rem" },
        "$description": "Default text (16px)"
      },
      "lg": {
        "$value": { "value": 1.125, "unit": "rem" },
        "$description": "Large text (18px)"
      },
      "xl": {
        "$value": { "value": 1.25, "unit": "rem" },
        "$description": "Extra large text (20px)"
      },
      "2xl": {
        "$value": { "value": 1.5, "unit": "rem" },
        "$description": "2XL text (24px)"
      },
      "3xl": {
        "$value": { "value": 1.875, "unit": "rem" },
        "$description": "3XL text (30px)"
      },
      "4xl": {
        "$value": { "value": 2.25, "unit": "rem" },
        "$description": "4XL text (36px)"
      },
      "5xl": {
        "$value": { "value": 3, "unit": "rem" },
        "$description": "5XL text (48px)"
      },
      "6xl": {
        "$value": { "value": 3.75, "unit": "rem" },
        "$description": "6XL text (60px)"
      },
      "7xl": {
        "$value": { "value": 4.5, "unit": "rem" },
        "$description": "7XL text (72px)"
      },
      "8xl": {
        "$value": { "value": 6, "unit": "rem" },
        "$description": "8XL text (96px)"
      },
      "9xl": {
        "$value": { "value": 8, "unit": "rem" },
        "$description": "9XL text (128px)"
      }
    },
    "weight": {
      "$type": "fontWeight",
      "thin": {
        "$value": 100,
        "$description": "Thin weight"
      },
      "extralight": {
        "$value": 200,
        "$description": "Extra light weight"
      },
      "light": {
        "$value": 300,
        "$description": "Light weight"
      },
      "normal": {
        "$value": 400,
        "$description": "Normal weight"
      },
      "medium": {
        "$value": 500,
        "$description": "Medium weight"
      },
      "semibold": {
        "$value": 600,
        "$description": "Semibold weight"
      },
      "bold": {
        "$value": 700,
        "$description": "Bold weight"
      },
      "extrabold": {
        "$value": 800,
        "$description": "Extra bold weight"
      },
      "black": {
        "$value": 900,
        "$description": "Black weight"
      }
    },
    "line-height": {
      "$type": "number",
      "none": {
        "$value": 1,
        "$description": "No line height"
      },
      "tight": {
        "$value": 1.25,
        "$description": "Tight line height"
      },
      "snug": {
        "$value": 1.375,
        "$description": "Snug line height"
      },
      "normal": {
        "$value": 1.5,
        "$description": "Normal line height"
      },
      "relaxed": {
        "$value": 1.625,
        "$description": "Relaxed line height"
      },
      "loose": {
        "$value": 2,
        "$description": "Loose line height"
      }
    },
    "tracking": {
      "$type": "dimension",
      "tighter": {
        "$value": { "value": -0.05, "unit": "em" },
        "$description": "Tighter letter spacing"
      },
      "tight": {
        "$value": { "value": -0.025, "unit": "em" },
        "$description": "Tight letter spacing"
      },
      "normal": {
        "$value": { "value": 0, "unit": "em" },
        "$description": "Normal letter spacing"
      },
      "wide": {
        "$value": { "value": 0.025, "unit": "em" },
        "$description": "Wide letter spacing"
      },
      "wider": {
        "$value": { "value": 0.05, "unit": "em" },
        "$description": "Wider letter spacing"
      },
      "widest": {
        "$value": { "value": 0.1, "unit": "em" },
        "$description": "Widest letter spacing"
      }
    }
  }
}
