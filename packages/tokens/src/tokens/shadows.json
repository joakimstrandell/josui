{
  "shadow": {
    "$type": "shadow",
    "sm": {
      "$value": {
        "offsetX": "0px",
        "offsetY": "1px",
        "blur": "2px",
        "spread": "0px",
        "color": "oklch(0 0 0 / 0.05)"
      },
      "$description": "Small shadow"
    },
    "default": {
      "$value": [
        {
          "offsetX": "0px",
          "offsetY": "1px",
          "blur": "3px",
          "spread": "0px",
          "color": "oklch(0 0 0 / 0.1)"
        },
        {
          "offsetX": "0px",
          "offsetY": "1px",
          "blur": "2px",
          "spread": "-1px",
          "color": "oklch(0 0 0 / 0.1)"
        }
      ],
      "$description": "Default shadow"
    },
    "md": {
      "$value": [
        {
          "offsetX": "0px",
          "offsetY": "4px",
          "blur": "6px",
          "spread": "-1px",
          "color": "oklch(0 0 0 / 0.1)"
        },
        {
          "offsetX": "0px",
          "offsetY": "2px",
          "blur": "4px",
          "spread": "-2px",
          "color": "oklch(0 0 0 / 0.1)"
        }
      ],
      "$description": "Medium shadow"
    },
    "lg": {
      "$value": [
        {
          "offsetX": "0px",
          "offsetY": "10px",
          "blur": "15px",
          "spread": "-3px",
          "color": "oklch(0 0 0 / 0.1)"
        },
        {
          "offsetX": "0px",
          "offsetY": "4px",
          "blur": "6px",
          "spread": "-4px",
          "color": "oklch(0 0 0 / 0.1)"
        }
      ],
      "$description": "Large shadow"
    },
    "xl": {
      "$value": [
        {
          "offsetX": "0px",
          "offsetY": "20px",
          "blur": "25px",
          "spread": "-5px",
          "color": "oklch(0 0 0 / 0.1)"
        },
        {
          "offsetX": "0px",
          "offsetY": "8px",
          "blur": "10px",
          "spread": "-6px",
          "color": "oklch(0 0 0 / 0.1)"
        }
      ],
      "$description": "Extra large shadow"
    },
    "2xl": {
      "$value": {
        "offsetX": "0px",
        "offsetY": "25px",
        "blur": "50px",
        "spread": "-12px",
        "color": "oklch(0 0 0 / 0.25)"
      },
      "$description": "2XL shadow"
    },
    "inner": {
      "$value": {
        "offsetX": "0px",
        "offsetY": "2px",
        "blur": "4px",
        "spread": "0px",
        "color": "oklch(0 0 0 / 0.05)",
        "inset": true
      },
      "$description": "Inner shadow"
    },
    "none": {
      "$value": {
        "offsetX": "0px",
        "offsetY": "0px",
        "blur": "0px",
        "spread": "0px",
        "color": "transparent"
      },
      "$description": "No shadow"
    }
  }
}
