{
  "shadow": {
    "$type": "shadow",
    "sm": {
      "$value": {
        "offsetX": "0",
        "offsetY": "1px",
        "blur": "2px",
        "spread": "0",
        "color": "oklch(0 0 0 / 0.05)"
      },
      "$description": "Small shadow"
    },
    "default": {
      "$value": [
        {
          "offsetX": "0",
          "offsetY": "1px",
          "blur": "3px",
          "spread": "0",
          "color": "oklch(0 0 0 / 0.1)"
        },
        {
          "offsetX": "0",
          "offsetY": "1px",
          "blur": "2px",
          "spread": "-1px",
          "color": "oklch(0 0 0 / 0.1)"
        }
      ],
      "$description": "Default shadow"
    },
    "md": {
      "$value": [
        {
          "offsetX": "0",
          "offsetY": "4px",
          "blur": "6px",
          "spread": "-1px",
          "color": "oklch(0 0 0 / 0.1)"
        },
        {
          "offsetX": "0",
          "offsetY": "2px",
          "blur": "4px",
          "spread": "-2px",
          "color": "oklch(0 0 0 / 0.1)"
        }
      ],
      "$description": "Medium shadow"
    },
    "lg": {
      "$value": [
        {
          "offsetX": "0",
          "offsetY": "10px",
          "blur": "15px",
          "spread": "-3px",
          "color": "oklch(0 0 0 / 0.1)"
        },
        {
          "offsetX": "0",
          "offsetY": "4px",
          "blur": "6px",
          "spread": "-4px",
          "color": "oklch(0 0 0 / 0.1)"
        }
      ],
      "$description": "Large shadow"
    },
    "xl": {
      "$value": [
        {
          "offsetX": "0",
          "offsetY": "20px",
          "blur": "25px",
          "spread": "-5px",
          "color": "oklch(0 0 0 / 0.1)"
        },
        {
          "offsetX": "0",
          "offsetY": "8px",
          "blur": "10px",
          "spread": "-6px",
          "color": "oklch(0 0 0 / 0.1)"
        }
      ],
      "$description": "Extra large shadow"
    },
    "none": {
      "$value": {
        "offsetX": "0",
        "offsetY": "0",
        "blur": "0",
        "spread": "0",
        "color": "transparent"
      },
      "$description": "No shadow"
    }
  }
}
